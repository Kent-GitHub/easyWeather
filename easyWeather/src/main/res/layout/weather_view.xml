<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_LBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/left_btn_bg" />

        <TextView
            android:textSize="24px"
            android:id="@+id/title_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title_LBtn"
            android:text="@string/tv_unknow"
            android:textColor="#fff"/>

        <ImageView
            android:id="@+id/btn_RBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/right_btn_bg" />

        <TextView
            android:id="@+id/title_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_RBtn"
            android:text="@string/tv_unknow"
            android:textSize="24px"
            android:textColor="#fff"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/rt_describe"
            android:src="@drawable/dcr_weather_na"
            android:contentDescription="@string/text_image_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_weather_icon"
            android:src="@drawable/icon_na"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/rt_tmp"
            android:text="@string/tv_unknow"
            android:padding="10dp"
            android:textSize="50sp"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/tv_unknow"
            android:textColor="#fff"
            android:textSize="24px"
            android:padding="10dp"
            android:contentDescription="@string/text_image_desc"
            android:id="@+id/tv_weather_describe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="24px"
            android:padding="10dp"
            android:text="@string/tv_unknow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/tv_tmp_range"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>